generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum ENUM_LOGGER_LEVEL {
  DEBUG
  INFO
  WARN
  ERROR
  FATAL
}

enum ENUM_LOGGER_ACTION {
  LOGIN
  GET
  CREATE
  UPDATE
  DELETE
  TEST
}

model Logger {
  id          String   @id @default(uuid())
  level       String
  action      String
  method      String
  requestId   String?
  user        String?
  role        String?
  apiKey      String?
  anonymous   Boolean  @default(true)
  accessFor   String?
  description String
  path        String?
  tags        String
  params      String   @default("{}") // Stored as JSON string
  bodies      String   @default("{}") // Stored as JSON string
  statusCode  Int?
  createdAt   DateTime @default(now())

  @@index([action])
  @@index([level])
  @@map("logs")
}

enum ENUM_SETTING_DATA_TYPE {
  BOOLEAN
  STRING
  ARRAY_OF_STRING
  NUMBER
}

model Setting {
  id          String                  @id @default(uuid())
  name        String                  @unique
  description String?
  type        ENUM_SETTING_DATA_TYPE?
  value       String
  createdAt   DateTime                @default(now())
  updatedAt   DateTime                @updatedAt

  @@index([name])
  @@map("settings")
}

enum ENUM_PERMISSION_GROUP {
  USER
  ROLE
  PERMISSION
  SETTING
  LOGGER
  BLOG
  REPOSITORY
  CATEGORY
}

enum ENUM_ACCESS_FOR {
  SUPER_ADMIN
  USER
  AUTHOR
}

model Role {
  id        String          @id @default(uuid())
  name      String          @unique
  isActive  Boolean         @default(true)
  accessFor ENUM_ACCESS_FOR
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  permissions RolePermission[]
  User        User[]

  @@index([isActive, name])
  @@map("roles")
}

model Permission {
  id          String                @id @default(uuid())
  code        String                @unique @db.VarChar(25)
  group       ENUM_PERMISSION_GROUP
  description String                @db.VarChar(255)
  isActive    Boolean               @default(true)
  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt

  roles RolePermission[]

  @@index([code])
  @@index([group])
  @@index([isActive])
  @@map("permissions")
}

model RolePermission {
  roleId       String
  permissionId String

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([roleId, permissionId])
  @@map("role_permissions")
}

model User {
  id       String @id @default(uuid())
  fullName String @db.VarChar(100)
  email    String @unique @db.VarChar(100)
  jobTitle String

  role String @default("USER") @db.VarChar(100)

  password          String    @db.VarChar(255)
  passwordExpired   DateTime
  passwordCreated   DateTime
  passwordAttempt   Int       @default(0)
  signUpDate        DateTime?
  salt              String
  isActive          Boolean   @default(true)
  inactivePermanent Boolean   @default(false)
  inactiveDate      DateTime?
  blocked           Boolean   @default(false)
  blockedDate       DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  roles Role    @relation(fields: [role], references: [id], onDelete: NoAction)
  Blogs Blogs[]

  @@index([fullName])
  @@index([email])
  @@index([role])
  @@index([isActive])
  @@index([inactivePermanent])
  @@index([blocked])
  @@map("users")
}

enum ENUM_STATUS {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum ENUM_CATEGORIES_TYPE {
  REPOSITORIES
  BLOGS
}

model categories {
  id          String @id @default(uuid())
  name        String @unique @db.VarChar(100)
  description String @db.Text
  slug        String @unique @db.VarChar(100)

  createdAt DateTime @default(now())

  type         ENUM_CATEGORIES_TYPE
  Blogs        Blogs[]
  Repositories Repositories[]

  @@index([name, slug, type])
  @@map("categories")
}

model Blogs {
  id String @id @default(uuid())

  title String @unique @db.VarChar(255)
  slug  String @unique @db.VarChar(255)

  thumbnail String @db.VarChar(255)

  content     String
  description String @db.Text

  category   String     @db.VarChar(100)
  categories categories @relation(fields: [category], references: [id], onDelete: Cascade)

  status    ENUM_STATUS @default(DRAFT)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  user_id String
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([title])
  @@index([slug])
  @@index([category])
  @@index([status])
  @@index([user_id])
  @@map("blogs")
}

model Repositories {
  id String @id @default(uuid())

  title String @unique @db.VarChar(255)
  slug  String @unique @db.VarChar(255)

  thumbnail String @db.VarChar(255)

  description        String  @db.Text
  indication         String? @db.VarChar(255)
  composition        String? @db.VarChar(255)
  dose               String? @db.VarChar(255)
  usage_guideline    String? @db.VarChar(255)
  attention          String? @db.VarChar(255)
  contraindication   String? @db.VarChar(255)
  side_effect        String? @db.VarChar(255)
  product_categories String? @db.VarChar(255)
  no_registration    String? @db.VarChar(255)

  category   String     @db.VarChar(100)
  categories categories @relation(fields: [category], references: [id], onDelete: Cascade)

  status    ENUM_STATUS @default(DRAFT)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@index([title])
  @@index([slug])
  @@index([category])
  @@index([status])
  @@index([product_categories])
  @@map("repositories")
}
